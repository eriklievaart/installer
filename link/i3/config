bindsym $ctrl+F3 workspace 3
bindsym $ctrl+F4 workspace 4
bindsym $ctrl+F5 workspace 5
bindsym $ctrl+F6 workspace 6
bindsym $ctrl+F7 workspace 7
bindsym $ctrl+F8 workspace 8
bindsym $ctrl+F9 workspace 9
bindsym $ctrl+F10 workspace 10

bindsym $ctrl+$alt+t exec xfce4-terminal




# application window rules
for_window [class="(?i)firefox"]          move workspace 1; workspace 1
for_window [class="(?i)xed"]              move workspace 2; workspace 2
for_window [class="(?i)xfce4-terminal"]   move workspace 3; workspace 3
for_window [class="(?i)xviewer"]          move workspace 4; workspace 4
for_window [class="(?i)vlc"]              move workspace 9; workspace 9
for_window [class="(?i)audacious"]        move scratchpad
for_window [class="(?i)speedcrunch"]      floating enable




# startup commands
exec --no-startup-id setxkbmap -layout erik
exec --no-startup-id automount
exec --no-startup-id for id in $(xinput list | grep -i touchpad | sed -r 's/.*id=([0-9]*).*/\1/'); do xinput --disable $id; done
exec --no-startup-id xsetroot -solid "#181818"






















