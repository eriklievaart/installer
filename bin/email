
cd ~/Public/email/test

# remove old files
rm -f test.sh
rm -f live.sh
rm -f put.zip
rm -f attachments.zip

echo ""
tree files
echo ""

echo "Clear files (y/n)?"
read clear
if [ "$clear" = "y" ]; then
	rm -rf files/*
fi

# create scripts
java -jar ~/Public/email/email.jar

if [ -a test.sh ]
then
	chmod a+x test.sh
	chmod a+x live.sh

	# edit message
	vi message.txt

	# zip all files
	zip -r attachments files/*
	zip put test.sh live.sh message.txt attachments.zip

	# send zip to server
	read -p "Send (y/n)?" SEND
	if [ "$SEND" == "y" ]; then
		echo "uploading zip";
		curl -X PUT "http://eriklievaart.com/put" -F "file=@put.zip" -b "JSESSIONID=cookievalue"
	else
		echo "user abort";
	fi
fi
